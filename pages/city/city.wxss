@import "../dist/index.wxss";
page {
    background-color: #f0f0f8;
    height: 100%;
    font-size: 28rpx;
}
.letters {
    position: fixed;
    right: 0;
    bottom: 0;
    top: 0;
    width: 80rpx;
    text-align: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    color: #999;
    z-index: 1;
    padding: 50rpx 0;
}

.letter {
    flex: 1;
    font-size: 24rpx;
}

.toast-letter {
    background-color: rgba(0, 0, 0, 0.5);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 50%;
    left: 50%;
    margin: -100rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    font-size: 52rpx;
    z-index: 1;
}
.city-top {
    padding: 10rpx 0;
}
.city-btns {
    padding: 0 70rpx 0 20rpx;
}
.city-btn {
    box-sizing: border-box;
    padding: 10rpx;
    width: 25%;
    float: left;
    font-size: 28rpx;
}
.city-btn label {
    box-sizing: border-box;
    display: block;
    width: 100%;
    text-align: center;
    background-color: #f9fbfd;
    border-radius: 6rpx;
    padding: 10rpx 12rpx;
    margin: 0;
    overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
